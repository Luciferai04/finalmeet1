# Production Environment Configuration
# Copy this file to production.env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your-strong-production-secret-key-here

# API Keys
GOOGLE_API_KEY=your-production-google-gemini-api-key-here

# WhisperLive Configuration
WHISPER_HOST=whisper-live-server
WHISPER_PORT=9090
WHISPER_MODEL=base

# Database Configuration
REDIS_URL=redis://redis-server:6379/0

# Monitoring
PROMETHEUS_PORT=8000
GRAFANA_PORT=3000
ENABLE_PROMETHEUS=true

# Audio/Video Processing
ENABLE_GPU=true
CUDA_VISIBLE_DEVICES=0,1

# UI Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# Security
SSL_CERT_PATH=/app/config/ssl/fullchain.pem
SSL_KEY_PATH=/app/config/ssl/private.key
ENABLE_SSL=true

# Logging
LOG_LEVEL=WARNING
MAX_LOG_SIZE=500MB
LOG_RETENTION_DAYS=90

# Performance
MAX_QUEUE_SIZE=1000
WORKER_TIMEOUT=60
GUNICORN_WORKERS=4
GUNICORN_THREADS=2

# Feature Flags
ENABLE_ADVANCED_FEATURES=true
ENABLE_EGOSCHEMA=true
ENABLE_MONITORING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
